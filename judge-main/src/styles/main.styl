@import './lib/flex.styl';

body
  margin 0;
  font-family 'Noto Sans TC', Helvetica, Arial, sans-serif;
  position relative;

#root
  display flex;

.cover
  position absolute;
  top 0;
  left 0;
  right 0;
  bottom 0;

.reset-link
  text-decoration none;
  color inherit;

footer
  background-color rgba(0, 0, 0, 0.74);
  display flex;
  flex-wrap wrap;
  justify-content center;
  color white;
  padding 1em 0;
  border-bottom 0.8em solid rgba(0, 0, 0, 0.74);
  height auto;

  // min-height 240px
  .footer-content
    margin 0 1em;
    justify-content center;
    min-width 250px;

    &.footer-info
      padding 1em;

      .rowTitle
        font-size 14px;
        word-break keep-all;

  .footer-logo
    max-width 200px;

html
  overflow -moz-hidden-unscrollable;
  height 100%;
  width 100%;

// body::-webkit-scrollbar
//   display none;

body
  -ms-overflow-style none;
  height 100%;
  width 100%;
  overflow auto;

.md-editor-container
  li
    margin 0;
    padding 0;

  li p
    display inline-block;
    margin 0;
    padding 0;

  .md-editor, .wmde-markdown-var, .md-editor-content-editor, .md-editor-inner, .cm-editor
    height 100% !important;

.md-editor-preview, .wmde-markdown
  span
    display inline !important;

.transition-2
  transition all 0.2s;